{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "react-native",
    "strict": true,
    "paths": {
      "@web/*": ["../../web/*"],
      "@common/*": ["../../common/src/*"]
    }
  },
  "references": [
    {
      "path": "../../web/tsconfig.json"
    },
    {
      "path": "../../common/tsconfig.json"
    }
  ]
}
