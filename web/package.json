{
  "name": "teifi-shopify-app-template-backend",
  "displayName": "Teifi Shopify App Template",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "exports": "./dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run typegen && tsc",
    "dev": "cross-env NODE_ENV=development nodemon --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' index.ts --ignore ./frontend",
    "serve": "npm run graphql-codegen:compile && npm run prisma:migrate:deploy && npm run pgtyped:compile && cross-env NODE_ENV=production node dist/index.js",
    "typegen": "rm -rf schemas/generated/ && json2ts --style.singleQuote --cwd schemas/ -i 'schemas/*.json' -o schemas/generated/",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject ./dist && sentry-cli sourcemaps upload ./dist",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "pgtyped:compile": "DOTENV_CONFIG_PATH=.env node -r dotenv/config $(npm root)/.bin/pgtyped -c pgtyped.config.json",
    "pgtyped:watch": "DOTENV_CONFIG_PATH=.env node -r dotenv/config $(npm root)/.bin/pgtyped -c pgtyped.config.json -w",
    "graphql-codegen:compile": "graphql-codegen-esm -r dotenv/config --config codegen.ts",
    "graphql-codegen:watch": "graphql-codegen-esm -r dotenv/config --config codegen.ts --watch",
    "dev:watch": "concurrently -k -p \"[{name}]\" -n \"pgtyped,graphql-codegen\" -c \"blue.bold,pink.bold\" \"npm run pgtyped:watch\" \"npm run graphql-codegen:watch\""
  },
  "dependencies": {
    "@pgtyped/runtime": "^2.3.0",
    "@prisma/client": "^5.5.2",
    "@sentry/node": "^7.74.1",
    "@teifi-digital/shopify-app-express": "^0.2.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "pg-format": "^1.0.4",
    "prisma": "^5.5.2",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/import-types-preset": "^3.0.0",
    "@graphql-codegen/plugin-helpers": "^5.0.1",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/visitor-plugin-common": "^4.0.1",
    "@parcel/watcher": "^2.3.0",
    "@pgtyped/cli": "^2.3.0",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.8.7",
    "@types/pg": "^8.10.9",
    "@types/pg-format": "^1.0.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "json-schema-to-typescript": "^13.1.1",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1"
  }
}
