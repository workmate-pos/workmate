{
  "name": "work-orders-backend",
  "displayName": "Work Orders",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "exports": "./dist/index.js",
  "type": "module",
  "scripts": {
    "install:common": "cd ../common && npm install",
    "build": "npm run install:common && npm run typegen && npm run graphql-codegen:compile && tsc",
    "dev": "cross-env NODE_ENV=development nodemon --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' index.ts --ignore ./frontend",
    "serve": "cross-env NODE_ENV=production node dist/index.js",
    "serve:migrate": "npm run prisma:migrate:deploy && npm run serve",
    "typegen": "rm -rf schemas/generated/ && node ./node_modules/.bin/json2ts --style.singleQuote --cwd schemas/ -i 'schemas/*.json' -o schemas/generated/",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject ./dist && sentry-cli sourcemaps upload ./dist",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "pgtyped:compile": "node -r dotenv/config $(npm root)/.bin/pgtyped -c pgtyped.config.json",
    "pgtyped:watch": "npm run pgtyped:compile -- -w",
    "graphql-codegen:compile": "node -r dotenv/config $(npm root)/.bin/genql",
    "graphql-codegen:watch": "npm run graphql-codegen:compile -- -w",
    "dev:watch": "concurrently -k -p \"[{name}]\" -n \"pgtyped,graphql-codegen\" -c \"blue.bold,pink.bold\" \"npm run pgtyped:watch\" \"npm run graphql-codegen:watch\""
  },
  "dependencies": {
    "@pgtyped/runtime": "^2.3.0",
    "@prisma/client": "^5.5.2",
    "@sentry/node": "^7.74.1",
    "@teifi-digital/shopify-app-express": "^0.5.2",
    "@teifi-digital/shopify-app-toolbox": "^0.0.25",
    "@work-orders/common": "file:../common",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "pg-format": "^1.0.4",
    "prisma": "^5.5.2",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@pgtyped/cli": "^2.3.0",
    "@shopify/shopify-api": "^9.2.0",
    "@teifi-digital/genql": "^0.0.44",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.8.7",
    "@types/pg": "^8.10.9",
    "@types/pg-format": "^1.0.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "graphql": "^16.8.1",
    "graphql-config": "^5.0.3",
    "json-schema-to-typescript": "^13.1.1",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1"
  }
}
