{
  "name": "work-orders-backend",
  "displayName": "Work Orders",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "exports": "./dist/index.js",
  "type": "module",
  "scripts": {
    "clean": "rm -fr dist node_modules",
    "install:common": "cd ../common && npm install",
    "install:work-order-shopify-order": "cd ../work-order-shopify-order && npm install",
    "build:work-order-shopify-order": "cd ../work-order-shopify-order && npm run build",
    "build": "npm run install:common && npm run install:work-order-shopify-order && npm run build:work-order-shopify-order && npm run typegen && npm run graphql-codegen:compile && tsc && npm run copy-schemas",
    "copy-schemas": "copyfiles \"schemas/generated/*.d.ts\" dist && copyfiles \"schemas/*.json\" dist",
    "dev": "NODE_ENV=development nodemon --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' index.ts --ignore ./frontend",
    "serve": "NODE_ENV=production node dist/index.js",
    "serve:migrate": "npm run migrate && npm run serve",
    "typegen": "rm -rf schemas/generated/ && node ./node_modules/.bin/json2ts --style.singleQuote --cwd schemas/ -i 'schemas/*.json' -o schemas/generated/",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject ./dist && sentry-cli sourcemaps upload ./dist",
    "migrate": "prisma migrate deploy && npm run app:migrate",
    "app:migrate": "APP_MIGRATE=true node dist/index.js",
    "pgtyped:compile": "node -r dotenv/config $(npm root)/.bin/pgtyped -c pgtyped.config.json",
    "pgtyped:watch": "npm run pgtyped:compile -- -w",
    "graphql-codegen:compile": "node -r dotenv/config $(npm root)/.bin/genql",
    "graphql-codegen:watch": "npm run graphql-codegen:compile -- -w",
    "dev:watch": "concurrently -k -p \"[{name}]\" -n \"pgtyped,graphql-codegen\" -c \"blue.bold,pink.bold\" \"npm run pgtyped:watch\" \"npm run graphql-codegen:watch\""
  },
  "dependencies": {
    "@pgtyped/runtime": "^2.3.0",
    "@prisma/client": "^5.5.2",
    "@sentry/node": "^7.74.1",
    "@sinclair/typebox": "^0.32.15",
    "@teifi-digital/shopify-app-express": "^0.9.1",
    "@teifi-digital/shopify-app-toolbox": "^0.0.40",
    "@work-orders/common": "file:../common",
    "@work-orders/work-order-shopify-order": "file:../work-order-shopify-order",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "https-proxy-agent": "^7.0.4",
    "liquidjs": "^10.10.1",
    "mailgun.js": "^10.2.1",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "pg-format": "^1.0.4",
    "prisma": "^5.5.2",
    "tiny-invariant": "^1.3.1",
    "uuid": "^9.0.1",
    "work-order-shopify-order": "file:../work-order-shopify-order"
  },
  "devDependencies": {
    "@pgtyped/cli": "^2.3.0",
    "@shopify/shopify-api": "^10.0.0",
    "@teifi-digital/genql": "^0.0.44",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.8.7",
    "@types/pg": "^8.10.9",
    "@types/pg-format": "^1.0.4",
    "@types/uuid": "^9.0.8",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "graphql": "^16.8.1",
    "graphql-config": "^5.0.3",
    "json-schema-to-typescript": "^13.1.1",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1"
  }
}
