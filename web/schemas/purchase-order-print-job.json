{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "date": {
      "description": "A date to display in the purchase order printout",
      "type": "string"
    },
    "replyTo": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "minLength": 1
    },
    "from": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": ["date", "email", "from"],
  "additionalProperties": false
}
