{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "offset": {
      "type": "integer",
      "minimum": 0
    },
    "status": {
      "type": "string"
    },
    "limit": {
      "type": "integer",
      "minimum": 1,
      "maximum": 25
    },
    "query": {
      "type": "string"
    },
    "employeeIds": {
      "type": "array",
      "items": {
        "$ref": "scalars.json#/definitions/ID"
      }
    },
    "customerId": {
      "$ref": "scalars.json#/definitions/ID"
    },
    "customFieldFilters": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "paymentStatus": {
      "title": "payment-status",
      "enum": ["UNPAID", "PARTIALLY_PAID", "HAS_DEPOSIT", "FULLY_PAID"]
    }
  },
  "required": ["limit", "offset"],
  "additionalProperties": false
}
