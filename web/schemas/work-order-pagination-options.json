{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "offset": {
      "type": "integer",
      "minimum": 0
    },
    "type": {
      "type": "string"
    },
    "status": {
      "type": "string"
    },
    "limit": {
      "type": "integer",
      "minimum": 1,
      "maximum": 25
    },
    "query": {
      "type": "string"
    },
    "employeeIds": {
      "type": "array",
      "items": {
        "$ref": "scalars.json#/definitions/ID"
      }
    },
    "customerId": {
      "$ref": "scalars.json#/definitions/ID"
    },
    "customFieldFilters": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "paymentStatus": {
      "title": "payment-status",
      "enum": ["UNPAID", "PARTIALLY_PAID", "FULLY_PAID"]
    },
    "excludePaymentStatus": {
      "description": "If true, excludes the payment status rather than including it",
      "type": "boolean"
    },
    "afterDueDate": {
      "$ref": "scalars.json#/definitions/DateTime"
    },
    "beforeDueDate": {
      "$ref": "scalars.json#/definitions/DateTime"
    },
    "purchaseOrderStatus": {
      "title": "purchase-order-status",
      "enum": ["FULFILLED", "PENDING"]
    }
  },
  "required": ["limit", "offset"],
  "additionalProperties": false
}
