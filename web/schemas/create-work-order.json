{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the work order to update (if applicable). If not provided, a new work order will be created. Unique within a store.",
      "anyOf": [{ "const": null }, { "type": "string", "minLength": 1 }]
    },
    "status": {
      "type": "string",
      "minLength": 1
    },
    "dueDate": {
      "$ref": "scalars.json#/definitions/DateTime"
    },
    "note": {
      "type": "string"
    },
    "customerId": {
      "$ref": "scalars.json#/definitions/ID"
    },
    "derivedFromOrderId": {
      "description": "A Shopify Order ID from which this work order was derived",
      "anyOf": [{ "const": null }, { "$ref": "scalars.json#/definitions/ID" }]
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "uuid": {
            "type": "string"
          },
          "productVariantId": {
            "$ref": "scalars.json#/definitions/ID"
          },
          "quantity": {
            "$ref": "scalars.json#/definitions/Int"
          },
          "absorbCharges": {
            "type": "boolean"
          }
        },
        "required": ["uuid", "productVariantId", "quantity", "absorbCharges"],
        "additionalProperties": false
      }
    },
    "charges": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "title": "hourly-labour",
            "description": "An amount of labour determined by some hourly rate",
            "properties": {
              "type": {
                "const": "hourly-labour"
              },
              "uuid": {
                "type": "string"
              },
              "workOrderItemUuid": {
                "anyOf": [
                  {
                    "const": null
                  },
                  {
                    "type": "string",
                    "minLength": 1
                  }
                ]
              },
              "employeeId": {
                "anyOf": [
                  {
                    "const": null
                  },
                  {
                    "$ref": "scalars.json#/definitions/ID"
                  }
                ]
              },
              "name": {
                "type": "string",
                "minLength": 1
              },
              "rate": {
                "$ref": "scalars.json#/definitions/Money"
              },
              "hours": {
                "$ref": "scalars.json#/definitions/Decimal"
              }
            },
            "required": ["type", "uuid", "workOrderItemUuid", "employeeId", "name", "rate", "hours"],
            "additionalProperties": false
          },
          {
            "title": "fixed-price-labour",
            "description": "An absolute amount of money for some labour",
            "properties": {
              "type": {
                "const": "fixed-price-labour"
              },
              "uuid": {
                "type": "string"
              },
              "workOrderItemUuid": {
                "anyOf": [
                  {
                    "const": null
                  },
                  {
                    "type": "string",
                    "minLength": 1
                  }
                ]
              },
              "employeeId": {
                "anyOf": [
                  {
                    "const": null
                  },
                  {
                    "$ref": "scalars.json#/definitions/ID"
                  }
                ]
              },
              "name": {
                "type": "string",
                "minLength": 1
              },
              "amount": {
                "$ref": "scalars.json#/definitions/Money"
              }
            },
            "required": ["type", "uuid", "workOrderItemUuid", "employeeId", "name", "amount"],
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "required": ["name", "status", "dueDate", "note", "customerId", "derivedFromOrderId", "items", "charges"],
  "additionalProperties": false
}
