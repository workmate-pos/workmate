{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the work order to update (if applicable). If not provided, a new work order will be created. Unique within a store.",
      "anyOf": [{ "const": null }, { "type": "string", "minLength": 1 }]
    },
    "status": {
      "type": "string",
      "minLength": 1
    },
    "customerId": {
      "$ref": "scalars.json#/definitions/ID"
    },
    "dueDate": {
      "$ref": "scalars.json#/definitions/DateTime"
    },
    "labour": {
      "type": "array",
      "items": {
        "type": "object",
        "anyOf": [
          {
            "title": "fixed-price-labour",
            "description": "An absolute amount of money for some labour",
            "properties": {
              "type": {
                "const": "fixed-price-labour"
              },
              "name": {
                "type": "string"
              },
              "employeeId": {
                "anyOf": [{ "const": null }, { "$ref": "scalars.json#/definitions/ID" }]
              },
              "amount": {
                "$ref": "scalars.json#/definitions/Money"
              },
              "lineItemUuid": {
                "anyOf": [{ "const": null }, { "type": "string", "minLength": 1 }]
              },
              "labourUuid": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": ["type", "name", "employeeId", "amount", "lineItemUuid", "labourUuid"],
            "additionalProperties": false
          },
          {
            "title": "hourly-labour",
            "description": "An amount of labour determined by some hourly rate",
            "properties": {
              "type": {
                "const": "hourly-labour"
              },
              "name": {
                "type": "string"
              },
              "employeeId": {
                "anyOf": [{ "const": null }, { "$ref": "scalars.json#/definitions/ID" }]
              },
              "rate": {
                "$ref": "scalars.json#/definitions/Money"
              },
              "hours": {
                "$ref": "scalars.json#/definitions/Decimal"
              },
              "lineItemUuid": {
                "anyOf": [{ "const": null }, { "type": "string", "minLength": 1 }]
              },
              "labourUuid": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": ["type", "name", "employeeId", "rate", "hours", "lineItemUuid", "labourUuid"],
            "additionalProperties": false
          }
        ]
      }
    },
    "description": {
      "type": "string"
    },
    "derivedFromOrderId": {
      "description": "A Shopify Order ID from which this work order was derived",
      "anyOf": [{ "const": null }, { "$ref": "scalars.json#/definitions/ID" }]
    },
    "lineItems": {
      "description": "All line items for this work order, including products and services",
      "type": "array",
      "items": {
        "title": "line-item",
        "type": "object",
        "properties": {
          "uuid": {
            "description": "A unique identifier for this line item",
            "type": "string",
            "minLength": 1
          },
          "productVariantId": {
            "$ref": "scalars.json#/definitions/ID"
          },
          "quantity": {
            "$ref": "scalars.json#/definitions/Int"
          }
        },
        "required": ["uuid", "productVariantId", "quantity"],
        "additionalProperties": false
      }
    },
    "discount": {
      "title": "discount",
      "anyOf": [
        { "const": null },
        {
          "type": "object",
          "anyOf": [
            {
              "properties": {
                "valueType": {
                  "const": "FIXED_AMOUNT"
                },
                "value": {
                  "$ref": "scalars.json#/definitions/Money"
                }
              },
              "required": ["value", "valueType"],
              "additionalProperties": false
            },
            {
              "properties": {
                "valueType": {
                  "const": "PERCENTAGE"
                },
                "value": {
                  "$ref": "scalars.json#/definitions/Decimal"
                }
              },
              "required": ["value", "valueType"],
              "additionalProperties": false
            }
          ]
        }
      ]
    }
  },
  "required": [
    "name",
    "status",
    "customerId",
    "dueDate",
    "labour",
    "description",
    "derivedFromOrderId",
    "lineItems",
    "discount"
  ],
  "additionalProperties": false
}
