{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the work order to update (if applicable). If not provided, a new work order will be created. Unique within a store.",
      "oneOf": [{ "type": "string", "minLength": 1 }, { "type": "null" }]
    },
    "status": {
      "type": "string",
      "minLength": 1
    },
    "customerId": {
      "$ref": "scalars.json#/definitions/ID"
    },
    "dueDate": {
      "$ref": "scalars.json#/definitions/DateTime"
    },
    "labour": {
      "type": "object",
      "properties": {
        "fixedPriceLabour": {
          "type": "array",
          "items": {
            "type": "object",
            "title": "fixed-price-labour",
            "description": "An absolute amount of money for some labour",
            "properties": {
              "name": {
                "type": "string"
              },
              "employeeId": {
                "oneOf": [{ "type": "null" }, { "$ref": "scalars.json#/definitions/ID" }]
              },
              "amount": {
                "$ref": "scalars.json#/definitions/Money"
              },
              "lineItemUuid": {
                "oneOf": [{ "type": "string", "minLength": 1 }, { "type": "null" }]
              }
            },
            "required": ["name", "employeeId", "amount", "lineItemUuid"],
            "additionalProperties": false
          }
        },
        "hourlyLabour": {
          "type": "array",
          "items": {
            "type": "object",
            "title": "hourly-labour",
            "description": "An amount of labour determined by some hourly rate",
            "properties": {
              "name": {
                "type": "string"
              },
              "employeeId": {
                "oneOf": [{ "type": "null" }, { "$ref": "scalars.json#/definitions/ID" }]
              },
              "rate": {
                "$ref": "scalars.json#/definitions/Money"
              },
              "hours": {
                "$ref": "scalars.json#/definitions/Int"
              },
              "lineItemUuid": {
                "oneOf": [{ "type": "string", "minLength": 1 }, { "type": "null" }]
              }
            },
            "required": ["name", "employeeId", "rate", "hours", "lineItemUuid"],
            "additionalProperties": false
          }
        }
      },
      "required": ["fixedPriceLabour", "hourlyLabour"],
      "additionalProperties": false
    },
    "description": {
      "type": "string"
    },
    "derivedFromOrderId": {
      "description": "A Shopify Order ID from which this work order was derived",
      "oneOf": [{ "$ref": "scalars.json#/definitions/ID" }, { "type": "null" }]
    },
    "lineItems": {
      "description": "All line items for this work order, including products and services",
      "type": "array",
      "items": {
        "title": "line-item",
        "type": "object",
        "properties": {
          "uuid": {
            "description": "A unique identifier for this line item",
            "type": "string",
            "minLength": 1
          },
          "productVariantId": {
            "$ref": "scalars.json#/definitions/ID"
          },
          "quantity": {
            "$ref": "scalars.json#/definitions/Int"
          }
        },
        "required": ["uuid", "productVariantId", "quantity"],
        "additionalProperties": false
      }
    },
    "discount": {
      "title": "discount",
      "oneOf": [
        { "type": "null" },
        {
          "type": "object",
          "properties": {
            "value": {
              "description": "Either the dollar amount or the percentage",
              "type": "number"
            },
            "valueType": {
              "enum": ["FIXED_AMOUNT", "PERCENTAGE"]
            }
          },
          "required": ["value", "valueType"],
          "additionalProperties": false
        }
      ]
    }
  },
  "required": [
    "name",
    "status",
    "customerId",
    "dueDate",
    "labour",
    "description",
    "derivedFromOrderId",
    "lineItems",
    "discount"
  ],
  "additionalProperties": false
}
