{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string"
    },
    "customer": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        }
      },
      "required": ["id"],
      "additionalProperties": false
    },
    "price": {
      "title": "price-definition",
      "type": "object",
      "properties": {
        "tax": {
          "type": "integer",
          "minimum": 0
        },
        "discount": {
          "type": "integer",
          "minimum": 0
        },
        "shipping": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["tax", "discount", "shipping"],
      "additionalProperties": false
    },
    "dueDate": {
      "type": "string"
    },
    "products": {
      "type": "array",
      "items": {
        "title": "product-definition",
        "type": "object",
        "properties": {
          "productVariantId": {
            "type": "string"
          },
          "quantity": {
            "type": "integer",
            "minimum": 0
          },
          "unitPrice": {
            "type": "integer",
            "minimum": 0
          }
        },
        "required": ["productVariantId", "quantity", "unitPrice"],
        "additionalProperties": false
      }
    },
    "services": {
      "type": "array",
      "items": {
        "title": "service-definition",
        "type": "object",
        "properties": {
          "productVariantId": {
            "type": "string"
          },
          "basePrice": {
            "type": "integer",
            "minimum": 0
          },
          "employeeAssignments": {
            "type": "array",
            "items": {
              "title": "service-employee-assignment",
              "type": "object",
              "properties": {
                "employeeId": {
                  "type": "string"
                },
                "employeeRate": {
                  "type": "integer",
                  "minimum": 0
                },
                "hours": {
                  "type": "integer",
                  "minimum": 0
                }
              },
              "required": ["employeeId", "employeeRate", "hours"],
              "additionalProperties": false
            }
          }
        },
        "required": ["productVariantId", "basePrice", "employeeAssignments"],
        "additionalProperties": false
      }
    },
    "employeeAssignments": {
      "type": "array",
      "items": {
        "title": "employee-assignment",
        "type": "object",
        "properties": {
          "employeeId": {
            "type": "string"
          }
        },
        "required": ["employeeId"],
        "additionalProperties": false
      }
    },
    "description": {
      "type": "string"
    },
    "derivedFromOrderId": {
      "description": "A Shopify Order ID from which this work order was derived",
      "type": "string",
      "minLength": 1
    }
  },
  "required": ["status", "customer", "price", "dueDate", "products", "services", "employeeAssignments", "description"],
  "additionalProperties": false
}
