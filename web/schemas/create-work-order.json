{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the work order to update (if applicable). If not provided, a new work order will be created. Unique within a store.",
      "anyOf": [{ "const": null }, { "type": "string", "minLength": 1 }]
    },
    "status": {
      "type": "string",
      "minLength": 1
    },
    "dueDate": {
      "$ref": "scalars.json#/definitions/DateTime"
    },
    "note": {
      "type": "string"
    },
    "internalNote": {
      "type": "string"
    },
    "customerId": {
      "$ref": "scalars.json#/definitions/ID"
    },
    "derivedFromOrderId": {
      "description": "A Shopify Order ID from which this work order was derived",
      "anyOf": [{ "const": null }, { "$ref": "scalars.json#/definitions/ID" }]
    },
    "customFields": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "items": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "uuid": {
                "type": "string"
              },
              "quantity": {
                "$ref": "scalars.json#/definitions/Int"
              },
              "absorbCharges": {
                "type": "boolean"
              },
              "customFields": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "type": {
                "const": "product"
              },
              "productVariantId": {
                "$ref": "scalars.json#/definitions/ID"
              }
            },
            "required": ["uuid", "quantity", "absorbCharges", "customFields", "type", "productVariantId"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "uuid": {
                "type": "string"
              },
              "quantity": {
                "$ref": "scalars.json#/definitions/Int"
              },
              "absorbCharges": {
                "type": "boolean"
              },
              "customFields": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "type": {
                "const": "custom-item"
              },
              "name": {
                "type": "string",
                "minLength": 1
              },
              "unitPrice": {
                "$ref": "scalars.json#/definitions/Money"
              }
            },
            "required": ["uuid", "quantity", "absorbCharges", "customFields", "type", "name", "unitPrice"],
            "additionalProperties": false
          }
        ]
      }
    },
    "charges": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "title": "hourly-labour",
            "description": "An amount of labour determined by some hourly rate",
            "properties": {
              "type": {
                "const": "hourly-labour"
              },
              "uuid": {
                "type": "string"
              },
              "workOrderItem": {
                "anyOf": [
                  {
                    "const": null
                  },
                  {
                    "type": "object",
                    "properties": {
                      "type": {
                        "enum": ["product", "custom-item"]
                      },
                      "uuid": {
                        "type": "string"
                      }
                    },
                    "required": ["type", "uuid"],
                    "additionalProperties": false
                  }
                ]
              },
              "employeeId": {
                "anyOf": [
                  {
                    "const": null
                  },
                  {
                    "$ref": "scalars.json#/definitions/ID"
                  }
                ]
              },
              "name": {
                "type": "string",
                "minLength": 1
              },
              "rate": {
                "$ref": "scalars.json#/definitions/Money"
              },
              "hours": {
                "$ref": "scalars.json#/definitions/Decimal"
              },
              "rateLocked": {
                "type": "boolean"
              },
              "hoursLocked": {
                "type": "boolean"
              },
              "removeLocked": {
                "type": "boolean"
              }
            },
            "required": [
              "type",
              "uuid",
              "workOrderItem",
              "employeeId",
              "name",
              "rate",
              "hours",
              "rateLocked",
              "hoursLocked",
              "removeLocked"
            ],
            "additionalProperties": false
          },
          {
            "title": "fixed-price-labour",
            "description": "An absolute amount of money for some labour",
            "properties": {
              "type": {
                "const": "fixed-price-labour"
              },
              "uuid": {
                "type": "string"
              },
              "workOrderItem": {
                "anyOf": [
                  {
                    "const": null
                  },
                  {
                    "type": "object",
                    "properties": {
                      "type": {
                        "enum": ["product", "custom-item"]
                      },
                      "uuid": {
                        "type": "string"
                      }
                    },
                    "required": ["type", "uuid"],
                    "additionalProperties": false
                  }
                ]
              },
              "employeeId": {
                "anyOf": [
                  {
                    "const": null
                  },
                  {
                    "$ref": "scalars.json#/definitions/ID"
                  }
                ]
              },
              "name": {
                "type": "string",
                "minLength": 1
              },
              "amount": {
                "$ref": "scalars.json#/definitions/Money"
              },
              "amountLocked": {
                "type": "boolean"
              },
              "removeLocked": {
                "type": "boolean"
              }
            },
            "required": [
              "type",
              "uuid",
              "workOrderItem",
              "employeeId",
              "name",
              "amount",
              "amountLocked",
              "removeLocked"
            ],
            "additionalProperties": false
          }
        ]
      }
    },
    "discount": {
      "title": "discount",
      "anyOf": [
        { "const": null },
        {
          "type": "object",
          "anyOf": [
            {
              "properties": {
                "type": {
                  "const": "FIXED_AMOUNT"
                },
                "value": {
                  "$ref": "scalars.json#/definitions/Money"
                }
              },
              "required": ["value", "type"],
              "additionalProperties": false
            },
            {
              "properties": {
                "type": {
                  "const": "PERCENTAGE"
                },
                "value": {
                  "$ref": "scalars.json#/definitions/Decimal"
                }
              },
              "required": ["value", "type"],
              "additionalProperties": false
            }
          ]
        }
      ]
    }
  },
  "required": [
    "name",
    "status",
    "dueDate",
    "note",
    "internalNote",
    "customerId",
    "derivedFromOrderId",
    "items",
    "charges",
    "customFields",
    "discount"
  ],
  "additionalProperties": false
}
