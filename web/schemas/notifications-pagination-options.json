{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "limit": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100
    },
    "offset": {
      "type": "integer",
      "minimum": 0
    },
    "orderBy": {
      "enum": ["updated-at", "created-at"]
    },
    "order": {
      "enum": ["ascending", "descending"]
    },
    "uuid": {
      "type": "string"
    },
    "recipient": {
      "type": "string"
    },
    "query": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "failed": {
      "type": "boolean"
    },
    "replayUuid": {
      "type": "string"
    }
  },
  "required": ["limit"],
  "additionalProperties": false
}
