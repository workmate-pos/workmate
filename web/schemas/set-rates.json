{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "rates": {
      "type": "array",
      "items": {
        "title": "employee-rate",
        "type": "object",
        "properties": {
          "employeeId": {
            "type": "string"
          },
          "rate": {
            "oneOf": [
              {
                "type": "integer",
                "minimum": 1
              },
              {
                "type": "null"
              }
            ]
          }
        },
        "required": ["employeeId", "rate"],
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "additionalProperties": false,
  "required": ["rates"]
}
