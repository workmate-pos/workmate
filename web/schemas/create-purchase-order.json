{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the purchase order to update (if applicable). If not provided, a new work order will be created. Unique within a store.",
      "anyOf": [{ "const": null }, { "type": "string", "minLength": 1 }]
    },
    "status": {
      "title": "status",
      "enum": ["OPEN", "RECEIVED", "CANCELLED", "CLOSED"]
    },
    "locationId": {
      "anyOf": [
        { "const": null },
        {
          "$ref": "scalars.json#/definitions/ID"
        }
      ]
    },
    "vendorName": {
      "anyOf": [
        { "const": null },
        {
          "type": "string",
          "minLength": 1
        }
      ]
    },
    "shipFrom": {
      "type": "string"
    },
    "shipTo": {
      "type": "string"
    },
    "note": {
      "type": "string"
    },
    "discount": {
      "anyOf": [{ "const": null }, { "$ref": "scalars.json#/definitions/Money" }]
    },
    "tax": {
      "anyOf": [{ "const": null }, { "$ref": "scalars.json#/definitions/Money" }]
    },
    "shipping": {
      "anyOf": [{ "const": null }, { "$ref": "scalars.json#/definitions/Money" }]
    },
    "deposited": {
      "anyOf": [{ "const": null }, { "$ref": "scalars.json#/definitions/Money" }]
    },
    "paid": {
      "anyOf": [{ "const": null }, { "$ref": "scalars.json#/definitions/Money" }]
    },
    "lineItems": {
      "type": "array",
      "items": {
        "type": "object",
        "title": "product",
        "properties": {
          "productVariantId": {
            "$ref": "scalars.json#/definitions/ID"
          },
          "shopifyOrderLineItemId": {
            "anyOf": [{ "const": null }, { "$ref": "scalars.json#/definitions/ID" }]
          },
          "quantity": {
            "description": "The quantity of this product variant in the PO",
            "$ref": "scalars.json#/definitions/Int"
          },
          "availableQuantity": {
            "description": "The quantity of this product variant available in the inventory",
            "$ref": "scalars.json#/definitions/Int"
          },
          "unitCost": {
            "$ref": "scalars.json#/definitions/Money"
          }
        },
        "required": ["productVariantId", "shopifyOrderLineItemId", "quantity", "availableQuantity", "unitCost"],
        "additionalProperties": false
      }
    },
    "customFields": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "employeeAssignments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "employeeId": {
            "$ref": "scalars.json#/definitions/ID"
          }
        },
        "required": ["employeeId"],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "name",
    "status",
    "locationId",
    "vendorName",
    "shipFrom",
    "shipTo",
    "note",
    "discount",
    "tax",
    "shipping",
    "deposited",
    "paid",
    "lineItems",
    "customFields",
    "employeeAssignments"
  ],
  "additionalProperties": false
}
