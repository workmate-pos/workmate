{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the purchase order to update (if applicable). If not provided, a new work order will be created. Unique within a store.",
      "anyOf": [{ "const": null }, { "type": "string", "minLength": 1 }]
    },
    "status": {
      "type": "string"
    },
    "placedDate": {
      "anyOf": [{ "const": null }, { "$ref": "scalars.json#/definitions/DateTime" }]
    },
    "locationId": {
      "anyOf": [
        { "const": null },
        {
          "$ref": "scalars.json#/definitions/ID"
        }
      ]
    },
    "vendorName": {
      "anyOf": [
        { "const": null },
        {
          "type": "string",
          "minLength": 1
        }
      ]
    },
    "shipFrom": {
      "type": "string"
    },
    "shipTo": {
      "type": "string"
    },
    "note": {
      "type": "string"
    },
    "discount": {
      "anyOf": [{ "const": null }, { "$ref": "scalars.json#/definitions/Money" }]
    },
    "tax": {
      "anyOf": [{ "const": null }, { "$ref": "scalars.json#/definitions/Money" }]
    },
    "shipping": {
      "anyOf": [{ "const": null }, { "$ref": "scalars.json#/definitions/Money" }]
    },
    "deposited": {
      "anyOf": [{ "const": null }, { "$ref": "scalars.json#/definitions/Money" }]
    },
    "paid": {
      "anyOf": [{ "const": null }, { "$ref": "scalars.json#/definitions/Money" }]
    },
    "lineItems": {
      "type": "array",
      "items": {
        "type": "object",
        "title": "product",
        "properties": {
          "uuid": {
            "$ref": "scalars.json#/definitions/UUID"
          },
          "productVariantId": {
            "$ref": "scalars.json#/definitions/ID"
          },
          "serialNumber": {
            "description": "Optional serial number of the incoming product. If provided, the serial number will automatically be registered upon receipt. If a serial number is set the quantity must equal 1.",
            "anyOf": [{ "const": null }, { "type": "string" }]
          },
          "specialOrderLineItem": {
            "anyOf": [
              { "const": null },
              {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "uuid": {
                    "$ref": "scalars.json#/definitions/UUID"
                  }
                },
                "required": ["name", "uuid"],
                "additionalProperties": false
              }
            ]
          },
          "quantity": {
            "description": "The quantity of this product variant in the PO",
            "$ref": "scalars.json#/definitions/Int",
            "minimum": 1
          },
          "unitCost": {
            "$ref": "scalars.json#/definitions/Money"
          },
          "customFields": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          }
        },
        "required": [
          "uuid",
          "productVariantId",
          "specialOrderLineItem",
          "quantity",
          "availableQuantity",
          "unitCost",
          "customFields",
          "serialNumber"
        ],
        "additionalProperties": false
      }
    },
    "customFields": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "employeeAssignments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "employeeId": {
            "$ref": "scalars.json#/definitions/ID"
          }
        },
        "required": ["employeeId"],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "name",
    "status",
    "placedDate",
    "locationId",
    "vendorName",
    "shipFrom",
    "shipTo",
    "note",
    "discount",
    "tax",
    "shipping",
    "deposited",
    "paid",
    "lineItems",
    "customFields",
    "employeeAssignments"
  ],
  "additionalProperties": false
}
