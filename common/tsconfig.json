    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "@web/*": ["../web/*"]
    },
    "composite": true
  },
  "references": [
    {
      "path": "../web/tsconfig.json"
    }
  ]
}
