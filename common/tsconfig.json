{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "jsx": "react-jsx",
    "paths": {
      "@web/*": ["../web/*"]
    },
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "references": [
    {
      "path": "../web/tsconfig.json"
    }
  ]
}
